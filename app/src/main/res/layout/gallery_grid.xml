<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="174dp"
            android:layout_height="174dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/gal1">
        </ImageView>
        <ImageButton
            android:id="@+id/favouriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favourite_btn"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="@id/img"
            app:layout_constraintBottom_toBottomOf="@id/img"
            android:background="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text"
        android:paddingHorizontal="10dp"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Volumizing Brow Waterproof"/>
    <TextView
        android:id="@+id/creator"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/ic_baseline_person_outline_18"
        android:text="alip"/>
    <TextView
        android:id="@+id/phone"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="0812345"
        android:layout_marginBottom="8dp"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/ic_outline_phone_24" />


</androidx.appcompat.widget.LinearLayoutCompat>