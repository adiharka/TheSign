<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F7F7"
    tools:context=".ForumDetail">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logotalk"
        android:paddingVertical="40dp"/>

    <LinearLayout
        android:id="@id/forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:background="@drawable/cardbrown"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/profile_pic" />
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="jwisung.parkeu" />
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Recommended bedroom with a minimalist theme"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/textmisc" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vulputate scelerisque malesuada in amet in elit laoreet. Sed dolor lacus, pretium adipiscing elementum. Nibh donec non interdum tempor  magna nulla convallis."/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:elevation="0dp"
            android:layout_marginVertical="8dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="1 Balasan"
            app:drawableStartCompat="@drawable/ic_baseline_reply_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reply1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/forum"
        android:background="@drawable/cardbrown"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fagialks_opire"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vulputate scelerisque malesuada in amet in elit laoreet."
            />
    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/reply1"
        android:layout_marginVertical="16dp"
        android:background="#c0c0c0"/>
    <TextView
        android:id="@+id/hinttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:text="Reply forum"/>
    <EditText
        android:id="@+id/forumText"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hinttext"
        android:background="@drawable/cardbrown"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="16dp"
        android:src="@drawable/reply_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forumText" />


    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:background="#F9F7F7">
        <ImageButton
            android:id="@+id/category"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/category"/>
        <ImageButton
            android:id="@+id/home"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"/>
        <ImageButton
            android:id="@+id/account"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>